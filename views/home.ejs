<% include partials/header %>

    <div class="container">
        <span id="title">Things To Do</span> <i class="fas fa-plus-circle"></i>
        <hr>
        <ul>
        <% todos.forEach(todo => { %>
            <li>
                <% if (todo.priority === 1){  %>
                    <i class="fas fa-exclamation-triangle common prioHigh"></i>
                <% } %>
                <% if (todo.priority === 2){  %>
                    <i class="fas fa-exclamation-triangle common"></i>
                <% } %>
                <% if (todo.priority === 3){  %>
                    <i class="far fa-bell prioHigh"></i>
                <% } %>
                <% if (todo.priority === 4){  %>
                    <i class="far fa-bell"></i>
                <% } %>
                <% if (todo.priority === 5){  %>
                    <i class="fas fa-couch"></i>
                <% } %>
                <%= todo.item %>
                <p><%= todo.description %></p>
            </li>
        
        <% }); %>
        </ul>
    </div>

<% include partials/footer %>

<i class="fas fa-check"></i>