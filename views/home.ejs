<% include partials/header %>

    <div class="container">
        <span id="title">Things To Do</span> <i class="fas fa-plus-circle buttonHead float-right"></i>
        <hr>
        <ul>
        <% todos.forEach(todo => { %>
            <li>
                <span id="<%= todo._id %>">
                    <% if (todo.priority === 1){  %>
                        <i class="fas fa-exclamation-triangle common prioHigh"></i>
                    <% } %>
                    <% if (todo.priority === 2){  %>
                        <i class="fas fa-exclamation-triangle common"></i>
                    <% } %>
                    <% if (todo.priority === 3){  %>
                        <i class="far fa-bell prioHigh"></i>
                    <% } %>
                    <% if (todo.priority === 4){  %>
                        <i class="far fa-bell"></i>
                    <% } %>
                    <% if (todo.priority === 5){  %>
                        <i class="fas fa-couch"></i>
                    <% } %>
                    <%= todo.item %><i class="fas fa-trash-alt prioHigh float-right"></i>
                </span>
                <p><%= todo.description %></p>
            </li>
        <% }); %>
        </ul>
        <% if(!currentUser){ %>
            <span id="login">LOGIN</span>
        <% } else { %>
            <span><strong><%= currentUser.username %></strong></span>
            <span id="logout" class="float-right">LOGOUT</span>
        <% } %>
    </div>

<% include partials/footer %>