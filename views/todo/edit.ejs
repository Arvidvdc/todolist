<% include ../partials/header %>

    <div class="container">
        <span id="title">EDIT ITEM</span><i class="fas fas fa-undo buttonHead float-right"></i>
        <hr>
        <form action="/<%= item._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <select name="updateTodo[priority]" title="Priority" autofocus>
                    <option value="1">Urgent</option>
                    <option value="2">High</option>
                    <option value="3">Needed</option>
                    <option value="4">Low</option>
                    <option value="5">Some day</option>
                </select>
            </div>
            <div class="form-group">
                <input type="text" name="updateTodo[item]" value="<%= item.item %>">
            </div>
            <div class="form-group">
                <input type="text" name="updateTodo[description]" value="<%= item.description %>">
            </div>
            <button class="btn btn-warning btn-xs">Bijwerken</button>
        </form>
    </div>

<% include ../partials/footer %>