<% include ../partials/header %>

    <div class="container">
        <span id="title">NEW ITEM</span> <i class="fas fa-undo buttonHead float-right"></i>
        <hr>
        <form action="/" method="post">
            <div class="form-group">
                <select name="newTodo[priority]" title="Priority" autofocus>
                    <option value="1">Urgent</option>
                    <option value="2">High</option>
                    <option value="3" selected>Needed</option>
                    <option value="4">Low</option>
                    <option value="5">Some day</option>
                </select>
            </div>
            <div class="form-group">
                <input type="text" name="newTodo[item]" placeholder="Task">
            </div>
            <div class="form-group">
                <input type="text" name="newTodo[description]" placeholder="Description">
            </div>
            <div class="form-group">
                <input type="submit">
            </div>
        </form>
    </div>

<% include ../partials/footer %>